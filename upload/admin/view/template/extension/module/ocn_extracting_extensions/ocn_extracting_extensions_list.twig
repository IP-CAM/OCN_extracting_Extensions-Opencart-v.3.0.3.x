{% if (module_search) %}
  <form action="{{ url_extract }}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form-search">
    <input type="hidden" name="extract_module" value="{{ module }}">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <td class="text-center"><input type="checkbox" id="module-select-all"></td>
          <td>{{ column_path_name }}</td>
          <td>{{ column_file_name }}</td>
        </tr>
      </thead>
      <tbody>
        {% for modules in module_search %}
          <tr>
            <td class="text-uppercase" colspan="3"><b>{{ modules['module'] }}({{ modules.files|length }})</b></td>
          </tr>
          {% for module in modules['files'] %}
            <tr>
              <td class="text-center"><input type="checkbox" name="module_search[]" value="{{ module['name'] }}"></td>
              <td>{{ module['path'] }}</td>
              <td>{{ module['file'] }}</td>
            </tr>
          {% endfor %}
        {% endfor %}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">
            {% if (module_total is defined) %}
              <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>{{ success }}</strong> {{ text_total }} {{ module_total }}
              </div>
            {% endif %}
          </td>
        </tr>
      </tfoot>
    </table>
  </form>
{% else %}
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>{{ warning }}</strong> {{ empty_search }}
  </div>
{% endif %}

<script>
$(document).ready(function(){
  $('#module-select-all').on('click', function () {
    $('input[name*="module_search"]').prop('checked', this.checked);
  })
});
</script>
